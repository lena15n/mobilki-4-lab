<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/maps_linear_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:weightSum="1"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"
             tools:context="com.lena.tj.MapsActivity"
             tools:showIn="@layout/app_bar_main">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.lena.tj.MapsActivity"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/maps_travel_creation_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maps_from_layout">

            <Button
                android:id="@+id/maps_choose_from_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_create_from_point"
                />

            <TextView
                android:id="@+id/maps_from_textview"
                android:layout_below="@+id/maps_choose_from_button"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="5dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/colorWhiteTransparent"
                android:text="@string/maps_from_address"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maps_to_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maps_from_layout">

            <Button
                android:id="@+id/maps_choose_to_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel_create_to_point"/>

            <TextView
                android:id="@+id/maps_to_textview"
                android:layout_below="@+id/maps_choose_to_button"
                android:layout_marginEnd="60dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/colorWhiteTransparent"
                android:text="@string/maps_to_address"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maps_to_layout">

            <Button
                android:id="@+id/maps_create_travel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/maps_travel_create_button"
                android:theme="@style/Main.Button"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/maps_clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/maps_clear_button"
                android:theme="@style/Main.Button"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>